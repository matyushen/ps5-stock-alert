  "main": "src/index.js",
  "description": "Playstation 5 stock alert",
  "license": "MIT",
  "author": "Nikita Matyushenko <matyushen@users.noreply.github.com>",
  "repository": "https://github.com/matyushen/ps5-stock-alert.git",
  "dependencies": {
    "axios": "^0.21.1",
    "date-fns": "^2.16.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
